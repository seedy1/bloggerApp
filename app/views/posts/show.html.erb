<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>Posted By <%= @post.user.email %> || <%= time_ago_in_words(@post.created_at) %> </p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<% if current_user%>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end%>
